{% extends 'base.html.twig' %}

{% block title %}Write your joke{% endblock %}

{% block body %}

<style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h3 class="text-center">Hello  {{ app.user.name }}!</h3>

<div class="container">
    <div class="row">
        <div class="col-md-10 ml-md-auto">
            <div class="card bg-light mb-3 mt-5" style="width: 800px">
                <div class="card-body">
                    <div class="card-header mb-3">Send your joke</div>
                    {{ form_start(form) }}
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_label(form.categoryId, 'List of categories') }}
                            {{ form_widget(form.categoryId, {'attr': {'class': 'form-control'}}) }}
                            {{ form_label(form.joke, 'Write your joke:') }}
                            {{ form_widget(form.joke, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i> Send joke
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
