{% extends 'base.html.twig' %}

{% block title %}Read joke{% endblock %}

{% block body %}
    <style>
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <ul>{% for category in categories %}
                                <li>
                                    <a href="{{ path('app_read_jokes_category', {'id': category.id}) }}">{{ category.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <button type="button" class="btn btn-link">
                        <a class="btn btn-outline-success" href="{{ path('app_read_all') }}"
                           role="button">Read all jokes</a>
                    </button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}