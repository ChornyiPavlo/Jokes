{% extends 'base.html.twig' %}

{% block title %}Read joke{% endblock %}

{% block body %}
<style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-10 ml-md-auto">
            <div class="card bg-light mb-3 mt-5" style="width: 800px">
                <div class="card-body">
                    <div class="card-header mb-3">Jokes from
{#                        {{ categoryId }} #}
                        category </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3"></div>
                                <ul>  {% for joke in jokes %}
                                   <li> {{ joke.joke }}</li>
                                      {% endfor %}
                                </ul>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
