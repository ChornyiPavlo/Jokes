{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table{ width:100% }
</style>

    <table class="table-light">
        <tbody>
        <tr class="table-info text-center">
            {{ form_start(loadJoke) }}
            <br> {{ form_row(loadJoke.category, {'attr': {'class': 'form-control'}}) }}
            <br> {{ form_row(loadJoke.joke, {'attr': {'class': 'form-control'}}) }}
        </tr>
        </tbody>
    </table>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    <a class="btn btn-secondary " href="{{ path('app_jokes') }}">Back</a>
    {{ form_end(loadJoke) }}

    {% endblock %}
